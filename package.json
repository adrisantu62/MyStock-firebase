{
  "scripts": {
    "dev:backend": "ts-node-dev --transpile-only --compiler-options '{\"module\":\"CommonJS\"}' backend/src/server.ts",
    "dev:frontend": "serve frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "tsc -p backend",
    "build:functions": "node scripts/build-functions.js",
    "predeploy": "npm run build:functions",
    "predeploy:functions": "npm run build:functions",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "npm run predeploy:functions && firebase deploy --only functions",
    "seed": "ts-node backend/src/seeds/seed.ts",
    "setAdmin": "ts-node backend/scripts/setAdmin.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "firebase-admin": "^13.6.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.5",
    "concurrently": "^8.2.2",
    "serve": "^14.2.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
